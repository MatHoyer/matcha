{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@matcha/common": ["../common/src"],
      "@/*": ["./src/*"]
    },
    "outDir": "dist"
  },
  "include": ["src"]
}
